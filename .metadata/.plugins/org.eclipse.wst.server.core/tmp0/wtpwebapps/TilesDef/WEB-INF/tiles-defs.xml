<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.3//EN"
       "http://struts.apache.org/dtds/tiles-config_1_3.dtd">
       
<tiles-definitions>
	<definition name="welcome" page="/jsp/layout.jsp">
		<put name="header" value="/jsp/header.jsp"></put>
		<put name="body" value="/jsp/body.jsp"></put>
		<put name="menu" value="/jsp/menu.jsp"></put>
		<put name="footer" value="/jsp/footer.jsp"></put>	
	</definition>
	
	<definition name="login" extends="welcome">
		<put name="body" value="/jsp/login.jsp"></put>
	</definition>
	
	<definition name="register" extends="welcome">
		<put name="body" value="/jsp/register.jsp"></put>
	</definition>
</tiles-definitions>       